<% content_for :title, "Dashboard" %>

<div class="flex flex-wrap sticky z-10">

    <div class="w-full md:w-1/3 xl:w-1/3 p-6">
        <!--Metric Card-->
        <div class="bg-gradient-to-b from-cyan-200 to-blue-100 border-b-4 border-cyan-500 rounded-lg shadow-xl p-5">
            <div class="flex flex-row items-center">
                <div class="flex-shrink pr-4">
                    <div class="rounded-full p-5 bg-cyan-600"><i class="fas fa-gamepad fa-2x fa-inverse"></i></div>
                </div>
                <div class="flex-1 text-right md:text-center">
                    <h2 class="font-bold uppercase text-gray-600">Game <%= 'session'.pluralize(@games_count) %> </h2>
                    <p class="font-bold text-3xl"><%= @games_count %> </p>
                </div>
            </div>
        </div>
        <!--/Metric Card-->
    </div>

    <div class="w-full md:w-1/3 xl:w-1/3 p-6">
        <!--Metric Card-->
        <div class="bg-gradient-to-b from-green-200 to-yellow-100 border-b-4 border-yellow-600 rounded-lg shadow-xl p-5">
            <div class="flex flex-row items-center">
                <div class="flex-shrink pr-4">
                    <div class="rounded-full p-5 bg-yellow-600"><i class="fas fa-users fa-2x fa-inverse"></i></div>
                </div>
                <div class="flex-1 text-right md:text-center">
                    <h2 class="font-bold uppercase text-gray-600">Total players</h2>
                    <p class="font-bold text-3xl"> <%= @players_count %> </p>
                </div>
            </div>
        </div>
        <!--/Metric Card-->
    </div>

    <div class="w-full md:w-1/3 xl:w-1/3 p-6">
        <!--Metric Card-->
        <div class="bg-gradient-to-b from-red-200 to-orange-100 border-b-4 border-red-500 rounded-lg shadow-xl p-5 cursor-pointer">
            <div class="flex flex-row items-center">
                <div class="flex-shrink pr-4">
                    <div class="rounded-full p-5 bg-red-600"><i class="fas fa-skull fa-2x fa-inverse"></i></div>
                </div>
                <div class="flex-1 text-right md:text-center">
                    <h2 class="font-bold uppercase text-gray-600">Total Kills</h2>
                    <p class="font-bold text-3xl"><%= @kills_count %> </p>
                </div>
            </div>
        </div>
        <!--/Metric Card-->
    </div>

</div>

<h1 class="font-bold pl-2 ml-5 text-3xl">
    Game sessions
</h1> 

<div class="flex flex-wrap">
    <% @games.each do |game| %>
    <div class="w-full md:w-1/2 xl:w-1/3 p-6">
        <!--Metric Card-->
        <%= link_to game_path(game) do %>
            <div class="relative bg-gradient-to-b from-blue-200 to-blue-100 border-b-4 border-blue-600 rounded-lg shadow-xl p-5 cursor-pointer">

                <div class="flex flex-row items-center">
                    <div class="flex-shrink pr-4">
                        <div class="rounded-full p-5 bg-blue-600"><i class="fas <%= game.type_icon %> fa-2x fa-inverse" style="color: <%= game.type_color || 'blue' %>"></i></div>
                    </div>
                    <div class="flex-1 text-right md:text-center">
                        <h2 class="font-bold uppercase text-gray-600"><%= game.type_label %></h2>
                        <p class="font-bold text-xl">Players: <%= game.players_count %></p>
                        <p class="font-bold text-xl">Total kills: <%= game.kills_count %></p>
                    </div>
                </div>
            </div>
        <% end %>

        <!--/Metric Card-->
    </div>
    <% end %>
</div>